<% layout("/layouts/boilerplate") %>

 
    <h3 class="heading">All Listings</h3>
    <!-- <form action="/listings/new" method="get">
        <button>Create new listing</button>
    </form> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

    <% for(listing of allListing){ %>

   <a href="/listings/<%= listing._id %> " class="listing-img">
    <div class="card listing-card" >
        <img src=" <%= listing.image %> " class="card-img-top" alt="listing-img" style="height: 20rem;">
        <div class="card-img-overlay"><i class="fa-solid fa-heart"></i></div>
        <div class="card-body">
          <p class="card-text"><b> <%= listing.title %> </b><br> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
        </div>
      </div>
    </a>
      <% } %>

 </div>




